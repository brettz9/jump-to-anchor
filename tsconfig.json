{
  "compilerOptions": {
    "lib": ["es2024", "DOM"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2024"
  },
  "include": [
    "*.js",
    "options/**/*.js",
    "lib/**/*.js",
    "typings/**/*.d.ts"
  ],
  "exclude": ["node_modules", "options/jml.js"]
}

{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "Brett Zamir",
  "version": "0.6.1",
  "homepage_url": "https://github.com/brettz9/jump-to-anchor/",

  "permissions": ["contextMenus"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/browser-polyfill.min.js", "lib/content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],

  "background": {
    "scripts": ["lib/browser-polyfill.min.js", "lib/background.js"]
  },

  "icons": {
    "128": "icon.png"
  },

  "default_locale": "en"
}
